{
  "threads": {
    "number": 2,
    "autorestart": 5000
  },
  "logs": {
    "level": "info",
    "pretty": true
  },
  "server": {
    "certs": {
      "cert": "",
      "key": ""
    },
    "protocol": "http2",
    "port": 8888
  },
  "monitor": {
    "enabled": true,
    "interval": 15000,
    "endpoint": "http://localhost:6060/report"
  },
  "rules": [{
    "path": "/service-one/*",
    "destPath": "/*/service",
    "dest": "http://localhost:7070",
    "headers": {
      "X-Token": "{$cookies.token}"
    }
  }, {
    "path": "/service-two/:name",
    "destPath": "/:name/service",
    "dest": "http://localhost:8080",
    "query": {
      "token": "{$cookies.token}"
    }
  }]
}
